{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block body %}
    <h1>Member</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ member.address }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ member.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <button><a href="{{ path('app_member_index') }}" style="text-decoration: none;">Back to list</a></button>

    <button><a href="{{ path('app_member_edit', {'id': member.id}) }}" style="text-decoration: none;">Edit</a></button>

    
{% endblock %}
